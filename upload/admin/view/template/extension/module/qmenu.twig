{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-qmenu" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-cog"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-qmenu" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_qmenu_status" id="input-status" class="form-control">
                <option value="1" {% if module_qmenu_status %}selected="selected"{% endif %}>{{ text_enabled }}</option>
                <option value="0" {% if not module_qmenu_status %}selected="selected"{% endif %}>{{ text_disabled }}</option>
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-label">{{ entry_button_label }}</label>
            <div class="col-sm-10">
              {% for language in languages %}
              {% set flag = language.image %}
              {% if not flag %}
              {% set flag = language.code ~ '.png' %}
              {% endif %}
              <div class="input-group" style="margin-bottom:5px;">
                <span class="input-group-addon"><img src="language/{{ language.code }}/{{ flag }}" alt="{{ language.name }}" title="{{ language.name }}" /></span>
                <input type="text" name="module_qmenu_label[{{ language.language_id }}]" value="{{ module_qmenu_label[language.language_id]|default('') }}" placeholder="{{ entry_button_label }} ({{ language.name }})" class="form-control" />
              </div>
              {% endfor %}
            </div>
          </div>
          <fieldset>
            <legend>{{ entry_items }}</legend>
            <div class="table-responsive">
              <table id="qmenu-items" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <td class="text-left">{{ column_label }}</td>
                    <td class="text-left">{{ column_type }}</td>
                    <td class="text-left">{{ column_destination }}</td>
                    <td class="text-center">{{ column_new_tab }}</td>
                    <td class="text-right">{{ column_action }}</td>
                  </tr>
                </thead>
                <tbody>
                  {% set item_row = 0 %}
                  {% if items %}
                    {% for item in items %}
                      <tr id="qmenu-item-row{{ item_row }}">
                        <td class="text-left">
                          {% for language in languages %}
                          {% set flag = language.image %}
                          {% if not flag %}
                          {% set flag = language.code ~ '.png' %}
                          {% endif %}
                          <div class="input-group" style="margin-bottom:5px;">
                            <span class="input-group-addon"><img src="language/{{ language.code }}/{{ flag }}" alt="{{ language.name }}" title="{{ language.name }}" /></span>
                            <input type="text" name="module_qmenu_items[{{ item_row }}][label][{{ language.language_id }}]" value="{{ item.label[language.language_id]|default('') }}" placeholder="{{ column_label }} ({{ language.name }})" class="form-control" />
                          </div>
                          {% endfor %}
                        </td>
                        <td class="text-left">
                          <select name="module_qmenu_items[{{ item_row }}][type]" class="form-control qmenu-type">
                            <option value="link" {% if item.type != 'route' %}selected="selected"{% endif %}>{{ text_type_link }}</option>
                            <option value="route" {% if item.type == 'route' %}selected="selected"{% endif %}>{{ text_type_route }}</option>
                          </select>
                        </td>
                        <td class="text-left">
                          <input type="text" name="module_qmenu_items[{{ item_row }}][href]" value="{{ item.href }}" placeholder="{{ help_link }}" class="form-control qmenu-field-link" {% if item.type == 'route' %}style="display:none"{% endif %} />
                          <input type="text" name="module_qmenu_items[{{ item_row }}][route]" value="{{ item.route }}" placeholder="{{ help_route }}" class="form-control qmenu-field-route" {% if item.type != 'route' %}style="display:none"{% endif %} />
                        </td>
                        <td class="text-center">
                          <input type="checkbox" name="module_qmenu_items[{{ item_row }}][new_tab]" value="1" {% if item.new_tab %}checked="checked"{% endif %} />
                        </td>
                        <td class="text-right">
                          <button type="button" data-row="qmenu-item-row{{ item_row }}" class="btn btn-danger qmenu-remove"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button>
                        </td>
                      </tr>
                      {% set item_row = item_row + 1 %}
                    {% endfor %}
                  {% else %}
                    <tr id="qmenu-item-row0">
                      <td class="text-left">
                        {% for language in languages %}
                        {% set flag = language.image %}
                        {% if not flag %}
                        {% set flag = language.code ~ '.png' %}
                        {% endif %}
                        <div class="input-group" style="margin-bottom:5px;">
                          <span class="input-group-addon"><img src="language/{{ language.code }}/{{ flag }}" alt="{{ language.name }}" title="{{ language.name }}" /></span>
                          <input type="text" name="module_qmenu_items[0][label][{{ language.language_id }}]" value="" placeholder="{{ column_label }} ({{ language.name }})" class="form-control" />
                        </div>
                        {% endfor %}
                      </td>
                      <td class="text-left">
                        <select name="module_qmenu_items[0][type]" class="form-control qmenu-type">
                          <option value="link" selected="selected">{{ text_type_link }}</option>
                          <option value="route">{{ text_type_route }}</option>
                        </select>
                      </td>
                      <td class="text-left">
                        <input type="text" name="module_qmenu_items[0][href]" value="" placeholder="{{ help_link }}" class="form-control qmenu-field-link" />
                        <input type="text" name="module_qmenu_items[0][route]" value="" placeholder="{{ help_route }}" class="form-control qmenu-field-route" style="display:none" />
                      </td>
                      <td class="text-center">
                        <input type="checkbox" name="module_qmenu_items[0][new_tab]" value="1" />
                      </td>
                      <td class="text-right">
                        <button type="button" data-row="qmenu-item-row0" class="btn btn-danger qmenu-remove"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button>
                      </td>
                    </tr>
                    {% set item_row = 1 %}
                  {% endif %}
                </tbody>
                <tfoot>
                  <tr>
                    <td colspan="4"></td>
                    <td class="text-right">
                      <button type="button" id="qmenu-add-item" class="btn btn-primary"><i class="fa fa-plus-circle"></i> {{ button_add_item }}</button>
                    </td>
                  </tr>
                </tfoot>
              </table>
            </div>
            <p class="help-block">{{ help_new_tab }}</p>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
var qmenuItemRow = {{ item_row }};

$('#qmenu-add-item').on('click', function() {
  var rowId = 'qmenu-item-row' + qmenuItemRow;
  var html  = '<tr id="' + rowId + '">';
      html += '  <td class="text-left">';
{% for language in languages %}
{% set flag = language.image %}
{% if not flag %}
{% set flag = language.code ~ '.png' %}
{% endif %}
      html += '    <div class="input-group" style="margin-bottom:5px;">';
      html += '      <span class="input-group-addon"><img src="language/{{ language.code }}/{{ flag }}" alt="{{ language.name|escape('js') }}" title="{{ language.name|escape('js') }}" /></span>';
      html += '      <input type="text" name="module_qmenu_items[' + qmenuItemRow + '][label][{{ language.language_id }}]" value="" placeholder="{{ column_label|escape('js') }} ({{ language.name|escape('js') }})" class="form-control" />';
      html += '    </div>';
{% endfor %}
      html += '  </td>';
      html += '  <td class="text-left"><select name="module_qmenu_items[' + qmenuItemRow + '][type]" class="form-control qmenu-type"><option value="link">{{ text_type_link|escape('js') }}</option><option value="route">{{ text_type_route|escape('js') }}</option></select></td>';
      html += '  <td class="text-left"><input type="text" name="module_qmenu_items[' + qmenuItemRow + '][href]" value="" placeholder="{{ help_link|escape('js') }}" class="form-control qmenu-field-link" /><input type="text" name="module_qmenu_items[' + qmenuItemRow + '][route]" value="" placeholder="{{ help_route|escape('js') }}" class="form-control qmenu-field-route" style="display:none" /></td>';
      html += '  <td class="text-center"><input type="checkbox" name="module_qmenu_items[' + qmenuItemRow + '][new_tab]" value="1" /></td>';
      html += '  <td class="text-right"><button type="button" data-row="' + rowId + '" class="btn btn-danger qmenu-remove"><i class="fa fa-minus-circle"></i> {{ button_remove|escape('js') }}</button></td>';
      html += '</tr>';

  $('#qmenu-items tbody').append(html);

  qmenuItemRow++;
});

$('#qmenu-items').on('click', '.qmenu-remove', function() {
  var rowId = $(this).data('row');
  $('#' + rowId).remove();
});

$('#qmenu-items').on('change', '.qmenu-type', function() {
  var row = $(this).closest('tr');

  if ($(this).val() === 'route') {
    row.find('.qmenu-field-link').hide();
    row.find('.qmenu-field-route').show();
  } else {
    row.find('.qmenu-field-route').hide();
    row.find('.qmenu-field-link').show();
  }
});

$('#qmenu-items .qmenu-type').trigger('change');
--></script>
